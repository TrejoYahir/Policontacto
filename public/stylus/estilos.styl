		min-width 56rem

@media screen and (max-width 56.6rem)

	.logo
		margin 0 0 0 3rem

	.login-form
		display block
		text-align center
		background-color azul-hover
		padding 1rem 0

	.form-registro
		margin 0

	.texto-inicio
		margin 1rem 0

	.max-container
		padding 1rem 0

	.input-login
		margin 0 .3rem

	.min
