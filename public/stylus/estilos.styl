	font-size 1.1rem
	
.icono-text
	@extend .icono-title

.footer-logo
	max-width 2rem
	display inline-block
	margin 0
	padding 0
	
.footer-text
	display inline-block
	padding 0
	margin 0
	padding-bottom .5rem

//perfil

.perfil
	text-align left

.info-container
	max-width 15rem
	color gris
	display inline-block
	text-align center
