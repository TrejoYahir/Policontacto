.bloque-informacion
	display inline-block
	vertical-align top
	text-align center
	max-width 25rem
	padding 1rem	
	&:hover
		.icon-holder
			background-color azul
			color white
			border 1px solid white

.icon-holder
	border-radius(50%)
	border 1px solid #e5e5e5
	width 6rem
	height 6rem
	display inline-block
	font-size 3rem
